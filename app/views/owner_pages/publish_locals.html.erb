<%= provide(:title,'Pubblica Locale') %>

<script src = "https://maps.googleapis.com/maps/api/js?key=AIzaSyAPrju4jKR4_YQJ22PRglSpUfeW9EHDASg&libraries=places&sensor=false"></script>
    
<script>
  function initialize_locale() {
    var input2 = document.getElementById('address');
    new google.maps.places.Autocomplete(input2);
  }
  google.maps.event.addDomListener(window, 'load', initialize_locale);
</script>

<h1>Pubblica locali</h1>
<h2>Creazione, modifica e visualizzazione di tutti i tuoi locali</h2>

<div class="row">
  <aside class="col-md-5">
    <section class="user_info">
      <h1>
        Aggiungi locale
      </h1>
    </section>
	  <section class="local_form">
    	<%= form_for(@local) do |f| %>
    		<%= render 'shared/error_messages', object: f.object %>
  			<div class="field">
    			<%= f.text_field :name, placeholder: "Inserisci nome", class: "form-control" %>
  			</div>
        <div class="field">
          <%= f.select(:category, ['Pub', 'Ristorante', 'Dance']) %>
        </div>
  			<div class="field" id="address" name="address" tag="address">
    			<%= f.text_field :address, placeholder: "Inserisci indirizzo", class: "form-control" %>
  			</div>
        <div class="field">
          <%= f.text_field :telephone, placeholder: "Inserisci telefono", class: "form-control" %>
        </div>
        <div class="field">
          <%= f.text_field :website, placeholder: "Inserisci sito internet", class: "form-control" %>
        </div>
        <div class="field">
          <%= f.text_field :iva, placeholder: "Inserisci partita iva", class: "form-control" %>
        </div>
  			<div class="field">
    			<%= f.text_area :description, placeholder: "Inserisci descrizione", class: "form-control" %>
  			</div>
        
  			<span class="picture">
    			<%= f.file_field :picture, accept: 'image/jpeg,image/gif,image/png' %>
  			</span>
  			<%= f.submit "Post", class: "btn btn-primary" %>
		  <% end %>
		  <script type="text/javascript">
  		$('#local_picture').bind('change', function() {
    		var size_in_megabytes = this.files[0].size/1024/1024;
    		if (size_in_megabytes > 5) {
      		alert('Maximum file size is 5MB. Please choose a smaller file.');
    		}
  		});
		  </script>
	  </section>

  </aside>
  <div class="col-md-7">
    <% if current_user.locals.any? %>
    <% @locals = current_user.locals.paginate(page: params[:page], :per_page => 3) %>
  	
      <h3>Locali (<%= current_user.locals.count %>)</h3><br>
      <ol class="locals">
        <%= render @locals %>
      </ol>
      <%= will_paginate @locals %>
    <% end %>
  </div>
</div>