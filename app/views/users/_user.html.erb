<li id="user-<%= user.id %>">
  <div class="row">
    
      <div class="col-sm-10">
        Nome: <%= user.name %><br>
        Email: <%= user.email %><br>
        Citt√†: <%= user.city %><br>
        Registrato alle <%= user.created_at.strftime("ore %H:%M del %d-%m-%y") %><br>
        Ruolo: <%= user.role %><br>
      </div>

      <div class="col-sm-2">
        
        <% if user_signed_in? %>
          <% if current_user.role=='admin' %>
            <% if user.role == 'client' || user.role=='owner'%>
              <%= form_tag ban_path, method: :post do %>
                <%= hidden_field_tag :id, user.id %>
                <%= submit_tag 'ban user' %>
              <% end %>
            <% elsif user.role == 'banned' %>
              <%= form_tag unban_path, method: :post do %>
                <%= hidden_field_tag :id, user.id %>
                <%= submit_tag 'unban user' %>
              <% end %>
            <% end %>
          <% end 
        end %>
      </div>
  </div>
</li>
