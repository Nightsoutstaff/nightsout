<%= provide(:title, @event.name) %>

<div class="container">
	<div class="center">
		<p><%= @event.name %></p>
		<%= image_tag @event.picture.url if @event.picture? %>
		<p><%= @event.local.address %></p>
		<p><%= @event.description %></p>
		<% if user_signed_in? %>
			<% if(current_user.role=='owner'&&current_user==@event.local.user) %>
				<%= link_to 'Modifica', edit_event_path(@event), class: "btn btn-primary" %>
			<% end 
		end %>

	</div>
</div>