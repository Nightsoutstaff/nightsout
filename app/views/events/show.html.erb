<% if @event.picture? %>
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <div class="col-sm-3"></div>
      <div class="col-sm-6">
        <%= image_tag @event.picture.url, class: 'thumbnail' %>
      </div>

