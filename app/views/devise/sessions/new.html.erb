<%= provide(:title, 'Accedi') %>

<br><h1>Accedi</h1><br>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      
      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, class: 'form-control' %>
      </div>

      <div class="field">
        <%= f.label :password %>
        <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
          &nbsp;<%= link_to "Password dimenticata?", new_password_path(resource_name) %>
        <% end -%><br />
        <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.label :remember_me, class: "checkbox inline" do %>
            <%= f.check_box :remember_me %>
            <span>Ricordami</span>
          <% end %>
        </div>
      <% end -%>
    </div>
  </div>
  <br>
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <%= f.submit "Accedi", class: "btn btn-primary" %>
    </div>
  </div>
      
<% end %>

<br><br><br>
<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <%- if devise_mapping.omniauthable? %>
      <%- resource_class.omniauth_providers.each do |provider| %>
        <%= link_to omniauth_authorize_path(resource_name, provider), class: "btn btn-block btn-social btn-facebook" do %>
            <span class="fa fa-facebook"></span><center>Accedi da Facebook</center>
        <% end %>
      <% end -%>
    <% end -%>
    <br><br><br>
  </div>
</div>

