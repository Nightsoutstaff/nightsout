        <% if not local.website.blank? %><b>Sito web:</b> <%= link_to local.website, "http://#{local.website}" %><br><% end %>
        <!--Descrizione: <%= local.description %><br>-->

        <br><%= link_to "Maggiori informazioni...", local %>
